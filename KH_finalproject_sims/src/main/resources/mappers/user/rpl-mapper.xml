<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="rpl">

	<!-- 댓글 목록 조회 -->
	<select id="getRplsByAnsNo" resultType="usRplvo">
		select *
		from QNA_RPL
		where aa_no = #{aaNo}
	</select>
	
	<!-- 댓글 달기 -->
	<insert id="insertReply" parameterType="usRplvo">
		insert into QNA_RPL (rpl_no, aa_no, rpl_date, rpl_content, user_id) values (
		QNA_RPL_SEQ.nextval
		, #{aaNo}
		, default
		, #{rplContent}
		, #{userId}
		)
	</insert>
</mapper>